@using AMA.Robotat.Mvc.Models.Customers
@model IEnumerable< CustomerViewModel>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create a New Customer</a>
</p>
<hr />
<table class="table data-tables table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var customer in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => customer.FullName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => customer.Gender)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => customer.Age)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => customer.Address)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => customer.PhoneNumber)
            </td>
                <td>
                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@customer.Id">
                        <i class="fa-sharp fa-solid fa-gear "></i>
                    </a>
                    <a class="text-decoration-none ms-2" asp-action="Details" asp-route-id="@customer.Id">
                        <i class="fa-sharp fa-solid fa-circle-info text-warning"></i>
                    </a>
                    <a class="text-decoration-none ms-2" data-bs-toggle="modal" data-bs-target="#DeleteComponent_@customer.Id">
                        <i class="fa-sharp fa-solid fa-trash-can text-danger"></i>
                    </a>

                    <!-- Modal -->
                    <div class="modal fade" id="DeleteComponent_@customer.Id" tabindex="-1" aria-labelledby="DeleteRobotLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="DeleteRobotLabel">Delete <span>Delete Customer</span></h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h3>
                                        Are you sure you want to delete <span class="text-danger">@customer.FullName</span>
                                    </h3>
                                </div>
                                <div class="modal-footer">

                                    <form asp-action="Delete">
                                        <input type="hidden" name="id" value="@customer.Id" />
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <input type="submit" value="Delete" class="btn btn-danger ms-2" />
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>


                </td>
        </tr>
}
    </tbody>
</table>
