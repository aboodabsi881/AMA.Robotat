@using AMA.Robotat.Mvc.Models.Meals
@model RobotDetailsViewModel

@{
    ViewData["Title"] = "Robot Details";
}

<h1>Details
    <span class="text-primary">@Model.Name</span>
</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
            <span>JOD</span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<h3>@Model.Name Components</h3>

<table class="table data-tables table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var component in Model.Components)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => component.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => component.Price)
                    <span>JOD</span>
                </td>

                <td>
                    <a class="text-decoration-none ms-2" asp-controller="Components" asp-action="Details" asp-route-id="@component.Id" title="Details">
                        <i class="fa-sharp fa-solid fa-circle-info"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



<hr />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> 
</div>
