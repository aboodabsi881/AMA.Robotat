@using AMA.Robotat.Mvc.Models.Robots
@model IEnumerable<RobotViewModel>

@{
    ViewData["Title"] = "Robots";
}

<h1>Robots</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create a New Robot</a>
</p>
<table class="table data-tables table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var robot in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => robot.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => robot.Price)
            </td>
            <td>
                <a class="text-decoration-none" asp-action="Edit" asp-route-id="@robot.Id">
                        <i class="fa-sharp fa-solid fa-gear "></i>
                </a>
                    <a class="text-decoration-none ms-2" asp-action="Details" asp-route-id="@robot.Id">
                        <i class="fa-sharp fa-solid fa-circle-info text-warning"></i>
                </a>
                    <a  class="text-decoration-none ms-2" data-bs-toggle="modal" data-bs-target="#DeleteComponent_@robot.Id">
                        <i class="fa-sharp fa-solid fa-trash-can text-danger"></i>
                    </a>

                    <!-- Modal -->
                    <div class="modal fade" id="DeleteComponent_@robot.Id" tabindex="-1" aria-labelledby="DeleteRobotLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="DeleteRobotLabel">Delete <span>Delete Robot</span></h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h3>
                                        Are you sure you want to delete <span class="text-danger">@robot.Name</span>
                                    </h3>
                                </div>
                                <div class="modal-footer">

                                    <form asp-action="Delete">
                                        <input type="hidden" name="id" value="@robot.Id" />
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <input type="submit" value="Delete" class="btn btn-danger ms-2" />
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>


                </td>
        </tr>
}
    </tbody>
</table>
